{
	"name": "loxt",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"test": "turbo run test",
		"dev": "turbo run dev",
		"docs": "typedoc --hideGenerator --out apps/docs --githubPages false --darkHighlightTheme one-dark-pro --tsconfig packages/loxt/tsconfig.json packages/loxt/src && cp utils/style.css apps/docs/assets/style.css",
		"lint": "rome check .",
		"release": "changeset version && changeset publish",
		"format": "rome format --write ."
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.1",
		"rome": "^12.0.0",
		"turbo": "latest",
		"typedoc": "^0.24.6"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"packageManager": "pnpm@7.26.3"
}
