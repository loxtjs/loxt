{
	"name": "loxt",
	"description": "Loxt is a simple and lightweight console logger with 0 external dependencies.",
	"version": "3.12.2",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"license": "MIT",
	"scripts": {
		"test": "vitest run",
		"test:watch": "vitest watch",
		"build": "tsup src/index.ts --minify --dts"
	},
	"directories": {
		"lib": "src",
		"test": "test"
	},
	"files": ["dist"],
	"publishConfig": {
		"access": "public",
		"provenance": true
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/loxtjs/loxt.git"
	},
	"bugs": {
		"url": "https://github.com/loxtjs/loxt/issues"
	},
	"homepage": "https://loxt.js.org/",
	"dependencies": {
		"@loxtjs/reporter": "workspace:*"
	},
	"devDependencies": {
		"@vitest/coverage-v8": "^0.34.4",
		"tsconfig": "workspace:*",
		"tsup": "^7.2.0",
		"typescript": "^5.2.2",
		"vitest": "^0.34.4"
	}
}
