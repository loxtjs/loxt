{
	"name": "loxt",
	"description": "Loxt is a simple and lightweight console logger with 0 external dependencies.",
	"version": "3.11.2",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"license": "MIT",
	"scripts": {
		"test": "vitest run",
		"test:watch": "vitest watch",
		"build": "tsup src/index.ts --minify --dts"
	},
	"directories": {
		"lib": "src",
		"test": "test"
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/loxtjs/loxt.git"
	},
	"bugs": {
		"url": "https://github.com/loxtjs/loxt/issues"
	},
	"homepage": "https://loxt.js.org/",
	"dependencies": {
		"@loxtjs/reporter": "workspace:*",
		"picocolors": "^1.0.0"
	},
	"devDependencies": {
		"@types/node": "^20.1.2",
		"@vitest/coverage-c8": "^0.30.1",
		"tsconfig": "workspace:*",
		"tsup": "^6.7.0",
		"typescript": "^5.0.4",
		"vitest": "^0.30.1"
	}
}
