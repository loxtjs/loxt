---
import Navbar from '../components/Navbar.astro';
import favicon from '/favicon.png';

interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<html lang='en'>
	<head>
		<title>{title} - Loxt</title>
		<meta charset='utf-8' />
		<meta name='viewport' content='width=device-width' />
		<meta name='title' content={`${title} - Loxt`} />
		<meta name='description' content='Loxt is a simple and lightweight console logger with 0 external dependencies.' />
		<meta name='theme-color' content='#2b2d31' />
		<meta property='og:site_name' content='Pyrite' />
		<meta property='og:title' content='Pyrite - Home' />
		<meta property='og:image:width' content='6912' />
		<meta property='og:image:height' content='3456' />
		<meta property='og:description' content='Know your members. Know your community.' />
		<meta property='og:image' content='/_astro/banner.3ca27c46.webp' />

		<meta name='twitter:card' content='summary_large_image' />
		<meta property='twitter:domain' content='pyritebot.netlify.app' />
		<meta property='twitter:url' content='https://pyritebot.netlify.app/' />
		<meta name='twitter:title' content='Pyrite - Home' />
		<meta name='twitter:description' content='Know your members. Know your community.' />
		<meta name='twitter:image' content='https://pyritebot.netlify.app/_astro/banner.3c2b2d71.webp' />
		<link rel='shortcut icon' href={favicon} type='image/png' />
	</head>

	<body class='text-white bg-gray-950'>
		<Navbar />
		<slot />
		<style>
			:global(.astro-code) {
				@apply rounded-md border;
			}
		</style>
	</body>
</html>
