---
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props as Props;
---

<header class='py-20 px-40 gap-8'>
	<h1 class='mb-5 text-6xl font-bold text-gray-300'>{title}</h1>
	<p class='mb-10 text-gray-400 font-medium'>{description}</p>
	<slot />
</header>
