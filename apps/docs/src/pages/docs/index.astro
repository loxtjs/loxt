import Card from '../../components/Card.astro';
import Header from '../../components/Header.astro';
import Layout from '../../layout/Layout.astro';
---

<Layout title='Docs'>
	<Header title='Docs' description='Learn all you need to know to use loxt in your projects.'>
		<ul class='grid mt-20 lg:flex gap-10'>
			<li>
				<Card title='Logger' description="Loxt's main function is to help you log messages with style" />
			</li>
			<li>
				<Card title='Reporter' description='Create your own themes to log the messages' />
			</li>
			<li>
				<Card
					title='Colors'
					description="Loxt doesn't just make it easier to add your own custom themes, it even makes easier the use of colors in the terminal, all in one module!"
				/>
			</li>
		</ul>
	</Header>
</Layout>
